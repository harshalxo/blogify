<%- include("../partials/header.ejs") %>
<div class="container">
	<div class="row">
		<div class="col-md-9">
			<div class="card">
                <img class="card-img-top img-thumbnail" src="<%= blog.image %>">
                <div class="card-body">
                    <strong><h1 class="card-title"><%= blog.name %></h1></strong>
                    <p class="card-text"><%= blog.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/blogs/<%=blog._id%>/comments/new">Add New Comment</a>
                </div>
                <hr>
					<% blog.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="float-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
		</div>
		<div class="col-md-3">
			<div class="card" style="width: 18rem;">
				<p class="lead list-group-item active">Recent Posts</p>
				<% blogs.forEach(function(blog){ %>
				<li class="list-group-item"><a href="/blogs/<%=blog._id %>"><%=blog.name%></a></li>
				<% }) %>
			</div>
		</div>
	</div>
</div>


<%- include("../partials/footer.ejs") %>