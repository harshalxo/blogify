<%- include("../partials/header.ejs") %>
<div class="container">
	<div class="row">
		<div id="list" class="col-md-9">
			<div class="card">
                <img class="card-img-top" src="<%= blog.image %>">
                <div class="card-body">
                    <strong><h1 class="card-title"><%= blog.name %></h1></strong>
                    <p class="card-text"><%= blog.description %></p>
                </div>
            </div>
            <div class="card">
				<h2 class="text-center">Comments</h2>
                <span class="text-right">
                    <a id="newComment" class="btn btn-success" href="/blogs/<%=blog._id%>/comments/new">Add New Comment</a>
                </span>
                <hr>
					<% blog.comments.forEach(function(comment){ %>
                    <div id="allComments" class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="float-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </div>
                    </div>
                	<% }) %>
            	</div>
			</div>
			<div id="list" class="col-md-3">
				<div class="card" style="width: 18rem;">
					<div class="card-header">
						<p class="lead">Recent Posts</p>
					</div>
					<ul class="list-group list-group-flush">
						<% blogs.forEach(function(blog){ %>
						<li class="list-group-item"><a href="/blogs/<%=blog._id %>"><%=blog.name%></a></li>
						<% }) %>
					</ul>
				</div>
			</div>
	</div>
</div>


<%- include("../partials/footer.ejs") %>