<%- include("../partials/header.ejs") %>

<div>
     <header class="jumbotron img-fluid" style="height: 510px; background-image: url(https://images.unsplash.com/photo-1523816572-a1a23d1a67b8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1051&q=80); background-size: cover; background-position: center">
         <div class="text-center d-block" style="padding-top: 140px;">
             <h1 class="bg-light mx-auto py-4" style="width: 35%">Welcome to Blogify!</h1>
         </div>
     </header>
	<div class="container-fluid pt-5 px-5">
		<div class="row text-center d-flex">
			<div class="card-columns">
				<% blogs.forEach(function(blogs){ %>
				 <div class="card border-0 mb-5" id="indexcard">
					<img class="card-img-top" src="<%= blogs.image %>">
					<div class="card-body">
						<strong><h3 class="card-title"><%= blogs.name %></h3></strong>
						<% var str = blogs.description; %>
						<% var res = str.substring(0,50); %>
						<p class="card-text"><%= res %>...</p>
						<a href="/blogs/<%= blogs._id %>" class="btn btn-outline-secondary">View full blog</a>
					</div>
				 </div>
				<% }); %>
			</div>
    	</div>
	</div>
	<hr>
	<br>
	<div class="text-center">
		<a class="btn btn-outline-info btn-lg mx-auto" href="/blogs/new">Create a new Blog!</a>
	</div>
	<br>
</div>

<%- include("../partials/footer.ejs") %>